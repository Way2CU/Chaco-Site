<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain,communicator"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
		<cms:raw file="parts/gtm.txt"/>
			<header>
				<cms:desktop>
					<iframe src="https://player.vimeo.com/video/156431526?autoplay=1&amp;loop=1" ></iframe>
				</cms:desktop>
				<h1><cms:text constant="header"/></h1>
				<span><cms:text constant="header_desc"/></span>
			</header>

			<div class="products">

				<h2><cms:text constant="product_title"/></h2>

				<cms:module
					name="gallery"
					action="show_image_list"
					group="products"
					template="parts/product_image.xml"
					/>

				<h3><cms:text constant="commerce"/></h3>
				<div class="adress">
					<p><cms:text constant="company"/></p>
					<p><cms:text constant="adress"/></p>
					<a
						href="'tel:'.urlencode(Language::getText('number'))"
						cms:eval="href"
						class=""
						>
						<cms:text constant="number_text"/>
					</a>
				</div>
			</div>

			<div class="features">

				<cms:module
					name="gallery"
					action="show_image_list"
					group="features"
					template="parts/feature_images.xml"
					/>

				<cms:module
					name="articles"
					action="show"
					text_id="apma_article"
					template="parts/article.xml"
					/>

				<cms:module
					name="articles"
					action="show"
					text_id="chako_article"
					template="parts/article_heading.xml"
					/>
			</div>

			<div class="gallery">
				<cms:desktop>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="gallery_images"
						template="parts/gallery_image.xml"
						/>
				</cms:desktop>
				<cms:mobile>
					<div class="scroll">
						<div class="images_wrap">
							<cms:module
								name="gallery"
								action="show_image_list"
								group="gallery_images"
								template="parts/gallery_image.xml"
								/>
						</div>
					</div>
				</cms:mobile>
				<cms:desktop>
					<h2><cms:text constant="big_video_title"/></h2>
					<div class="main_video">
						<cms:module
							name="youtube"
							action="show"
							text_id="chako_main"
							template="parts/video.xml"
							/>
					</div>

					<h2><cms:text constant="gallery_title"/></h2>
					
						<cms:module
							name="youtube"
							action="show_list"
							group_text_id="video_chako"
							template="parts/video.xml"
							/>
					
				</cms:desktop>
				<cms:mobile>
					<h2><cms:text constant="big_video_title"/></h2>
					<div class="main_video">
						<cms:module
							name="youtube"
							action="show"
							text_id="chako_main"
							template="parts/video.xml"
							/>
					</div>
					<h2><cms:text constant="gallery_title"/></h2>
					<div class="video_scroll">
						<div class="video_wrap">
							<cms:module
								name="youtube"
								action="show_list"
								group_text_id="video_chako"
								template="parts/video.xml"
								/>
						</div>
					</div>
				</cms:mobile>

			</div>

			<div class="contact">
				<span class="logo"><cms:text constant="commerce"/></span>
				<div class="adress">
				<p><cms:text constant="company"/></p>
				<p><cms:text constant="adress"/></p>
				<a
					href="'tel:'.urlencode(Language::getText('number'))"
					cms:eval="href"
					class=""
					>
					<cms:text constant="number_text"/>
				</a>
				</div>
				<div class="branch">
					<!-- <h3><cms:text constant="commerce"/></h3> -->
				</div>
			</div>

			<footer>
				<a href="http://www.foxmed.co.il" alt="foxmed"></a>
				<span><cms:text constant="copyright"/></span>
			</footer>


		</body>
	</html>
</document>
