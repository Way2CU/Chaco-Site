<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header>
				<h1><cms:text constant="header"/></h1>
				<span><cms:text constant="header_desc"/></span>
			</header>

			<div class="products">

				<h2><cms:text constant="product_title"/></h2>

				<cms:module
					name="gallery"
					action="show_image_list"
					group="products"
					template="parts/product_image.xml"
					/>

				<h3><cms:text constant="commerce"/></h3>
			</div>

			<div class="features">

				<cms:module
					name="gallery"
					action="show_image_list"
					group="features"
					template="parts/feature_images.xml"
					/>

				<cms:module
					name="articles"
					action="show"
					text_id="apma_article"
					template="parts/article.xml"
					/>

				<cms:module
					name="articles"
					action="show"
					text_id="chako_article"
					template="parts/article_heading.xml"
					/>
			</div>

			<div class="gallery">
				<cms:desktop>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="gallery_images"
						template="parts/gallery_image.xml"
						/>
				</cms:desktop>
				<cms:mobile>
					<div class="scroll">
						<div class="images_wrap">
							<cms:module
								name="gallery"
								action="show_image_list"
								group="gallery_images"
								template="parts/gallery_image.xml"
								/>
						</div>
					</div>
				</cms:mobile>
				<cms:desktop>
					<h2><cms:text constant="gallery_title"/></h2>
					<cms:module
						name="youtube"
						action="show_list"
						group="video_chako"
						template="parts/video.xml"
						/>
				</cms:desktop>
				<cms:mobile>
					<h2><cms:text constant="gallery_title"/></h2>
					<div class="video_scroll">
						<div class="video_wrap">
							<cms:module
								name="youtube"
								action="show_list"
								group="video_chako"
								template="parts/video.xml"
								/>
						</div>
					</div>
				</cms:mobile>

			</div>

			<div class="contact">
				<div class="form_wrap">
					<h2><cms:text constant="form_title"/></h2>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>

				<div class="branch">
					<h3><cms:text constant="commerce"/></h3>
				</div>

			</div>






		</body>
	</html>
</document>
